<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.unihannover.hci.quiz.controller.QuizController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="categoryLabel" text="Kategorie: Java Basics">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <Label fx:id="questionNumberLabel" text="Frage 1 von 10">
        <font>
            <Font name="System Bold" size="16.0" />
        </font>
    </Label>
    <Label fx:id="questionTextLabel" text="[Hier steht die Frage...]" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="18.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
        </VBox.margin>
    </Label>
    <VBox fx:id="answersVBox" alignment="CENTER" spacing="10.0">
        <Button fx:id="answerButton1" mnemonicParsing="false" onAction="#handleAnswer" prefHeight="35.0" prefWidth="400.0" text="Antwort 1" />
        <Button fx:id="answerButton2" mnemonicParsing="false" onAction="#handleAnswer" prefHeight="35.0" prefWidth="400.0" text="Antwort 2" />
        <Button fx:id="answerButton3" mnemonicParsing="false" onAction="#handleAnswer" prefHeight="35.0" prefWidth="400.0" text="Antwort 3" />
        <Button fx:id="answerButton4" mnemonicParsing="false" onAction="#handleAnswer" prefHeight="35.0" prefWidth="400.0" text="Antwort 4" />
    </VBox>
    <Label fx:id="feedbackLabel" text="Feedback" visible="false">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Label>
</VBox>
